generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  photoUrl   String?
  email      String    @unique
  password   String
  firstName  String
  lastName   String?
  lastActive String?
  bio        String?
  chats      String[]
  createdAt  DateTime  @default(now())
  updatedAt  DateTime? @updatedAt
  deletedAt  DateTime?
}

model Chat {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  photoUrl     String?
  lastMessage  String?
  creator      String
  invited      String[]
  participants String[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime? @updatedAt
  deletedAt    DateTime?
}

model Message {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  content   String
  creator   String
  chatId    String
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
  deletedAt DateTime?
}
