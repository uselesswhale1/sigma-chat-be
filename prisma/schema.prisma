generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Chat {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt    String
  name         String
  participants String[]
  User         User?    @relation(fields: [userId], references: [id])
  userId       String?  @db.ObjectId
}

model Message {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  authorId  String  @db.ObjectId
  author    User    @relation(fields: [authorId], references: [id])
  chat      String  @db.ObjectId
  createdAt String
  editedAt  String?
  text      String
}

model Profile {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  bio       String?
  createdAt String
  email     String    @unique
  firstName String
  lastName  String?
  photoUrl  String?
  chats     Chat[]
  messages  Message[]
}
